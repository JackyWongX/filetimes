{
  "name": "filetimes",
  "displayName": "FileTimes",
  "description": "这是一个用于统计和展示文件访问信息的 VSCode 插件。它可以帮助开发者追踪和分析工作区中文件的访问模式和编辑时间。",
  "version": "1.0.3",
  "publisher": "JackyWong",
  "private": false,
  "license": "MIT",
  "icon": "./images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/JackyWongX/filetimes"
  },
  "bugs": {
    "url": "https://github.com/JackyWongX/filetimes/issues"
  },
  "homepage": "https://github.com/JackyWongX/filetimes#readme",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "file",
    "statistics",
    "time",
    "tracking",
    "productivity",
    "usage"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
        "views": {
            "explorer": [
                {
                    "type": "tree",
                    "id": "filetimes-view",
                    "name": "FileTimes"
                }
            ]
        },
        "commands": [
            {
                "command": "filetimes.sortByTime",
                "title": "按总时间排序",
                "category": "FileTimes",
                "icon": "$(watch)"
            },
            {
                "command": "filetimes.sortByCount",
                "title": "按打开次数排序",
                "category": "FileTimes",
                "icon": "$(list-ordered)"
            },
            {
                "command": "filetimes.sortByName",
                "title": "按文件名排序",
                "category": "FileTimes",
                "icon": "$(file-text)"
            },
            {
                "command": "filetimes.sortByLastAccess",
                "title": "按最后访问时间排序",
                "category": "FileTimes",
                "icon": "$(calendar)"
            },
            {
                "command": "filetimes.removeFile",
                "title": "移除文件",
                "category": "FileTimes"
            },
            {
                "command": "filetimes.removeAllFiles",
                "title": "移除所有文件",
                "category": "FileTimes"
            }
        ],
    "submenus": [
        {
            "id": "filetimes.sortSubmenu",
            "label": "排序方式",
            "icon": "$(menu)"
        }
    ],
    "menus": {
      "view/title": [
        {
          "submenu": "filetimes.sortSubmenu",
          "when": "view == filetimes-view",
          "group": "navigation"
        }
      ],
      "filetimes.sortSubmenu": [
        {
          "command": "filetimes.sortByTime",
          "group": "1_sort"
        },
        {
          "command": "filetimes.sortByCount",
          "group": "1_sort"
        },
        {
          "command": "filetimes.sortByName",
          "group": "1_sort"
        },
        {
          "command": "filetimes.sortByLastAccess",
          "group": "1_sort"
        }
      ],
      "view/item/context": [
        {
          "command": "filetimes.removeFile",
          "when": "view == filetimes-view",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.11.7",
    "typescript": "^4.5.5",
    "vscode-test": "^1.6.1"
  }
}
